# General Purpose Chatbot Configuration
# Copy this file to .env and configure your values

# ============================================================================
# REQUIRED CONFIGURATION
# ============================================================================

# Anthropic API Key (REQUIRED)
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# ============================================================================
# SERVICE CONFIGURATION
# ============================================================================

# Service Information
SERVICE_NAME=general-purpose-chatbot
VERSION=dev
ENVIRONMENT=development

# Server Configuration
PORT=8080
REQUEST_TIMEOUT=30s
IDLE_TIMEOUT=60s

# ============================================================================
# ANTHROPIC/CLAUDE CONFIGURATION
# ============================================================================

# Claude Model to use
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Anthropic API Configuration
ANTHROPIC_API_URL=https://api.anthropic.com
ANTHROPIC_TIMEOUT=30s
ANTHROPIC_MAX_RETRIES=3
ANTHROPIC_INITIAL_BACKOFF=1s
ANTHROPIC_MAX_BACKOFF=10s

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log Level: debug, info, warn, error
LOG_LEVEL=info

# Log Format: json, text
LOG_FORMAT=json

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10s

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Request Limits
MAX_REQUEST_SIZE=10485760  # 10MB in bytes

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPS=100

# ============================================================================
# DATABASE CONFIGURATION (OPTIONAL)
# ============================================================================

# Database URL (if using a database)
# DATABASE_URL=postgres://user:pass@localhost:5432/chatbot
# DATABASE_MAX_CONNECTIONS=25
# DATABASE_CONN_MAX_LIFETIME=5m
# DATABASE_CONN_MAX_IDLE_TIME=5m

# ============================================================================
# REDIS CONFIGURATION (OPTIONAL)
# ============================================================================

# Redis Configuration (if using Redis for caching)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=
# REDIS_DATABASE=0
# REDIS_TIMEOUT=5s

# ============================================================================
# DOCKER/DEPLOYMENT SPECIFIC
# ============================================================================

# Build Information (set by build process)
# BUILD_TIME=2024-01-01T00:00:00Z
# GIT_COMMIT=abc1234

# ============================================================================
# EXAMPLE CONFIGURATIONS FOR DIFFERENT ENVIRONMENTS
# ============================================================================

# Development Environment Example:
# LOG_LEVEL=debug
# LOG_FORMAT=text
# METRICS_ENABLED=false
# ENVIRONMENT=development

# Production Environment Example:
# LOG_LEVEL=info
# LOG_FORMAT=json
# METRICS_ENABLED=true
# ENVIRONMENT=production
# REQUEST_TIMEOUT=30s
# RATE_LIMIT_RPS=1000

# Testing Environment Example:
# LOG_LEVEL=warn
# ENVIRONMENT=test
# ANTHROPIC_MAX_RETRIES=1
# REQUEST_TIMEOUT=10s